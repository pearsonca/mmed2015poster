\setbeamertemplate{block begin}{
  %\vskip.75ex
  \begin{beamercolorbox}{block title}%
    \usebeamerfont{block title}\Huge{\insertblocktitle}
  \end{beamercolorbox}%
  \begin{beamercolorbox}{lower separation line head}
    \rule{0pt}{2pt}
  \end{beamercolorbox}
  {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5pt}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[colsep*=.75ex,sep=.75ex,vmode]{block body}%
    \ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
  }
  \setbeamertemplate{block end}{
  \end{beamercolorbox}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{headline}{  
  \leavevmode

  \begin{beamercolorbox}[wd=\paperwidth]{headline}
    \begin{columns}[T]
      \begin{column}{.89\paperwidth}
        \vskip2cm
        \begin{center}
          \raggedleft
          \usebeamercolor{title in headline}{\color{fg}\textbf{\veryHuge{\inserttitle}}\\[3ex]}
          \usebeamercolor{author in headline}{\color{fg}\large{\insertauthor}\\[1ex]}
          \usebeamercolor{institute in headline}{\color{fg}\large{\insertinstitute}\\[1ex]}     
        \end{center}
      \end{column}
      \begin{column}{.10\paperwidth}
        \vskip1.5cm
        \begin{center}
          \includegraphics[width=.90\linewidth]{verticalSignature}
        \end{center}
        \vskip1.5cm
      \end{column}
      \begin{column}{.01\paperwidth}
      \end{column}
    \end{columns}
  \end{beamercolorbox}  
  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{2pt}
  \end{beamercolorbox}
}

